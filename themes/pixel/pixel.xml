			<forceUppercase>1</forceUppercase>
			<fontPath>./art/font.ttf</fontPath>
			<fontSize>0.03</fontSize>
		</text>

		<text name="md_playcount">
			<color>ffffff</color>
			<pos>1 1</pos>
			<!--- This will enable Player Count under the screenshot.--->
			<!---<pos>0.830 0.567</pos>--->
