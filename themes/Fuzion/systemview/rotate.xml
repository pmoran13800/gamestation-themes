<theme>
<formatVersion>4</formatVersion>


<view name="system">

	<image name="background2" extra="true">
		<path>./../assets/systeminfo.svg</path>
		<size>0.35 0.2</size>
		<pos>0.21 0.5</pos>
		<origin>0.5 0.5</origin>
	</image>

	<image name="background4" extra="true">
		<path>./../assets/semi.png</path>
		<maxSize>1 1</maxSize>
		<pos>0 0.5</pos>
		<origin>0 0.5</origin>
	</image> 	
 
	<image name="background3" extra="true">
		<tile>true</tile>
		<path>./../assets/square.png</path>
		<origin>0.5 0.5</origin>
		<size>0.6 0.865</size>
		<pos>0.65 0.5</pos>
	</image>
	
	<image name="art" extra="true">
		<path>./../assets/arts/$system.png</path>
		<origin>0.5 0.5</origin>
		<maxSize>0.6 0.865</maxSize>
		<pos>0.65 0.5</pos>
	</image> 


	<carousel name="systemcarousel">
		<type>vertical_wheel</type>
		<pos>0 0</pos>
		<size>0.35 1</size>
		<color>ffffff00</color>
		<logoScale>2.1</logoScale>
		<logoSize>0.1 0.1</logoSize>
		<logoRotation>14</logoRotation>
		<logoRotationOrigin>-2.2 0.5</logoRotationOrigin>
		<maxLogoCount>7</maxLogoCount>
	</carousel>

	<text name="systemInfo">
		<fontPath>./../assets/Roboto-Medium.ttf</fontPath>
		<alignment>center</alignment>
		<pos>0.35 0</pos>
		<size>0.65 0.065</size>
		<fontSize>0.02</fontSize>
	</text>


	<helpsystem name="help">
		<fontPath>./../assets/Roboto-Medium.ttf</fontPath>
		<fontSize>0.023</fontSize>
		<pos>0.355 0.94</pos>
	</helpsystem>
  
</view>

</theme>